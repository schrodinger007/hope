#include <bits/stdc++.h>
using namespace std;
 
int main() {
	// your code goes here
	int n;
	cin>>n;
	int arr[n];
	int sum=0;
	int sum1=0;
	for(int i=0;i<n;i++)
	
{
	cin>>arr[i];
	
}
for(int i=0;i<n;i++)
{
	sum1+=arr[i];
}
sort(arr,arr+n,greater<int>());
	for(int i=0;i<n;i++)
	
{
	sum=sum+arr[i];
	if(sum>sum1-sum)
	{
		cout<<i+1;
		break;
	}
}
	return 0;
}
