#include <bits/stdc++.h>
using namespace std;
 
int main() {
	// your code goes here
	char str[10000];
	cin>>str;
	int c=0;
	int a[1000000];
	for(int i=0;str[i]!='\0';i++)
	{
		if(str[i]=='1'||str[i]=='2'||str[i]=='3')
		{
			 a[c] = str[i] - '0';
			c++;
			
		}
	}
	
	
	 int key,j;  
    for (int i = 1; i < c; i++) 
    {  
        key = a[i];  
        j = i - 1;  
  
        
        while (j >= 0 && a[j] > key) 
        {  
            a[j + 1] = a[j];  
            j = j - 1;  
        }  
        a[j + 1] = key;  
    }  
	//sort(a, a+c, greater<int>()); 
	
	for(int i=0;i<c-1;i++)
	{
		/*if(a[i]==c)
		{
			cout<<a[i];
		}
		else*/
		cout<<a[i]<<"+";
	}
	cout<<a[c-1];
	return 0;
}
