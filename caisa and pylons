#include <bits/stdc++.h>
using namespace std;
#define ll long long int

int main() {
	// your code goes here
	ll n;
	cin>>n;
	ll h[n];
	ll e=0;
	ll d=0;
	
	for(ll i=0;i<n;i++)
	{
	cin>>h[i];	
	}
	d=h[0];
	for(ll i=0;i<n-1;i++)
	{
		if(h[i]>=h[i+1])
		{
			e+=h[i]-h[i+1];
		}
		else{
			if(e>=h[i+1]-h[i])
			
			e-=h[i+1]-h[i];
			
		
		else{
			d+=(h[i+1]-h[i])-e;
			e=0;
		}
	}
	}
	cout<<d;
	
	return 0;
}
