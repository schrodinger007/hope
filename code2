#include <bits/stdc++.h>
#define ll long long int
using namespace std;

int main() {
	// your code goes here
	ll n;
	cin>>n;
	ll a[n];
	ll hired=0;
	ll ans=0;
	for(ll i=0;i<n;i++)
	{
		cin>>a[i];
	}
	
	for(ll i=0;i<n;i++)
	{
		if(a[i]>0)
		{
		hired+=a[i];
		}
		else if(a[i]<0 && hired>0)
		{
			hired-=1;
		
		}
	else if(a[i]<0 && hired<=0 )
		{
			ans+=1;
		}
		
	}
	cout<<ans;
	
	
	
	return 0;
}
