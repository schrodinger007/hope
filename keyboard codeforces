#include <bits/stdc++.h>
using namespace std;
 
int main() {
	// your code goes here
	char ch;
	char str2[100000];
	char str[]={'q','w','e','r','t','y','u','i','o','p','a','s','d','f','g','h','j','k','l',';','z','x','c','v','b','n','m',',','.','/'};
	cin>>ch;
	cin>>str2;
	for(int j=0;str2[j]!='\0';j++)
	{
	for(int i=0;i<30;i++)
	{
		if(ch=='R')
	//cout<<str[str2[i]-1];
	{
	if(str2[j]==str[i])
	{
		cout<<str[i-1];
	}
	}
	else if(ch=='L')
	//cout<<str[str2[i]-1];
	{
	if(str2[j]==str[i])
	{
		cout<<str[i+1];
	}
	}
	}
	}
 
	return 0;
}
